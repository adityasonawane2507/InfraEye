{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "appAssociation": "AUTO",
    "headers": [
      {
        "source": "/**",
        "headers": [
          {
            "key": "Permissions-Policy",
            "value": "geolocation=*, camera=*, microphone=*"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
